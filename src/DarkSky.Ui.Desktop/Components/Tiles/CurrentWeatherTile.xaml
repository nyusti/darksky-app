<UserControl x:Class="DarkSky.Ui.Desktop.Components.Tiles.CurrentWeatherTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DarkSky.Ui.Desktop.Components.Tiles"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <local:IconNameToImageConverter x:Key="NameToIconConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Image x:Name="ForecastIcon" Width="100" Height="100" Source="{Binding Icon, Mode=OneWay, Converter={StaticResource NameToIconConverter}}" />
    </Grid>
</UserControl>