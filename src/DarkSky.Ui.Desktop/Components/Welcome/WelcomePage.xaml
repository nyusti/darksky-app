<Page x:Class="DarkSky.Ui.Desktop.Components.Welcome.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DarkSky.Ui.Desktop.Components.Welcome"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
        xmlns:l="http://gu.se/Localization"
        xmlns:p="clr-namespace:DarkSky.Ui.Desktop.Localization"
      Title="WelcomePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{l:Static p:UserStrings.WelcomeTitle}" FontSize="40" />
            <TextBlock Text="{l:Static p:UserStrings.WelcomeText}" FontSize="20" />
        </StackPanel>
    </Grid>
</Page>